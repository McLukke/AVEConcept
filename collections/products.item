		</div>

<!-- end of desktop slider -->


<!-- After testing -->

        <div id="desktop-slider-thumbnails-container">
	      {.repeated section items}
	        {.image?}
	        	<div class="desktop-preview-small col-xs-3">
		        	<label for="{urlId}">
				    	    <div class="desktop-slider-thumbnails-holder" style="background-image: url({assetUrl}?format=300w);background-repeat:no-repeat; background-position: left center; background-size: cover;">
	          				<!-- <img class="product_item img-responsive" {@|image-meta} /> -->

	          			</div>
	          		</label>
	          	</div>
	        {.end}
	      {.end}
        </div>



		</div> <!-- end col-8 -->

	    <!-- This shows the status (sold out/on sale), price, and description (excerpt) text -->
	    <div class="col-sm-4">
		    <div id="productDetails">
		      <!-- {@|product-status} -->

		      <h1 class="product-title">{title}</h1>

		      {@|product-price}

  			  <!-- <p>Quantity:</p> -->

		      {@|product-checkout}
		    </div>
		</div>
	</div>


    <!-- This displays any text/blocks added to the Additional Info tab -->
    <div>
    	<h1 id="aboutProduct">
    	About {title}
    	</h1>
    </div>

    {.section body}
    <div class="product-description">
      {@}
    </div>
  </div>

{.end}






